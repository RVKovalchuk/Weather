<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_weather_per_days_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_3dp"
    android:layout_marginTop="@dimen/margin_3dp"
    android:layout_marginEnd="@dimen/margin_3dp"
    android:background="@color/blue">

    <TextView
        android:id="@+id/list_item_weather_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/list_item_weather_date"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_not_important"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/list_item_weather_type"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_not_important"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/list_item_weather_date"
        app:layout_constraintTop_toBottomOf="@id/list_item_weather_date" />

    <ImageView
        android:id="@+id/list_item_weather_image"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:contentDescription="@string/list_item_weather_image"
        android:src="@drawable/ic_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/list_item_weather_temperature"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_main"
        app:layout_constraintBottom_toTopOf="@id/list_item_weather_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/list_item_weather_date" />
</androidx.constraintlayout.widget.ConstraintLayout>