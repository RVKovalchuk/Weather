<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:background="@color/blue">

        <TextView
            android:id="@+id/fragment_weather_per_hours_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:fontFamily="sans-serif"
            android:text="@string/fragment_weather_per_hours_date"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_condition"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_temperature"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_temperature" />

        <ImageView
            android:id="@+id/fragment_weather_per_hours_condition_image"
            android:layout_width="@dimen/image_main_size"
            android:layout_height="@dimen/image_main_size"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:contentDescription="@string/fragment_weather_per_hours_condition_image"
            android:src="@drawable/ic_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_weather_per_hours_date" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_temperature"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_date"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_date" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_max_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_max_wind_speed"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_condition"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_condition" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_average_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_average_humidity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_max_wind_speed"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_max_wind_speed" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_chance_of_rain_and_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_chance_of_rain_and_snow"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_average_humidity"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_average_humidity" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_time_of_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_time_of_sunrise"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_date"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_chance_of_rain_and_snow" />

        <TextView
            android:id="@+id/fragment_weather_per_hours_time_of_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/fragment_weather_per_hours_time_of_sunset"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_important"
            app:layout_constraintStart_toStartOf="@id/fragment_weather_per_hours_date"
            app:layout_constraintTop_toBottomOf="@id/fragment_weather_per_hours_time_of_sunrise" />

        <ImageButton
            android:id="@+id/fragment_weather_per_hours_button_share"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:background="@android:color/transparent"
            android:contentDescription="@string/fragment_weather_per_hours_button_share"
            android:src="@drawable/ic_share"
            app:layout_constraintBottom_toBottomOf="@id/fragment_weather_per_hours_time_of_sunset"
            app:layout_constraintEnd_toEndOf="@id/fragment_weather_per_hours_condition_image"
            app:layout_constraintTop_toTopOf="@id/fragment_weather_per_hours_time_of_sunrise" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_weather_per_hours_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/weather_per_hours_item" />
</LinearLayout>